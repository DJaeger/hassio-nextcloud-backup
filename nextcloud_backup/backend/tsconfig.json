    "allowJs": true,
    "outDir": "./dist",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "target": "es6",
    "sourceMap": true,
    "importsNotUsedAsValues": "error",
    "strict": true,
  },
  "include": ["src/**/*"]
}