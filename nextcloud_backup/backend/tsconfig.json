    "allowJs": true,
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
